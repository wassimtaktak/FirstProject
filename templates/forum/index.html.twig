{% extends 'base.html.twig' %}

{% block title %}Forum index{% endblock %}

{% block body %}

<div class="titles-container">
<p class="title">Titre</p>
<p class="title">date creation</p>
<p class="title">Actions</p>
</div>
    <a class="btn btn-primary" href="{{ path('app_forum_new') }}">Create new</a>
    <div class="cards-container">
        {% for forum in forums %}
                <div class="card">
                    <div class="card-body" >
                        <div style="display:flex;flex-direction:row">
                        <a href="{{ path('app_forum_show', {'id': forum.id}) }}"><p class="card-title" >{{ forum.sujet }}</p></a>
                        <p class="card-text">{{ forum.dateCreation }}</p>
                        </div>
                        <div>
                        <a href="{{ path('app_forum_edit', {'id': forum.id}) }}" class="btn btn-secondary">Edit</a>
                        {{ include('forum/_delete_form.html.twig') }}
                        </div>
                        
                    </div>
                </div>
            
        {% else %}
            <h1>no record found</h1>
        {% endfor %}
    </div>

    <style>
    .titles-container{
        display:flex;
        flex-direction:row;
        justify-content:space-between;
        padding-left:100px;
        padding-right:100px;
        padding-top:30px;
    }
    .title{
        text-decoration:underline;
    }
    .cards-container{
        display:flex;
        flex-direction:column;
    }
    .card{
        background-color:#323232;
        border-radius:20px;
        width:97%;
        margin:1%;
    }
    .card-body{
        display:flex;
        justify-content: space-between;
    }
    .card-title{
        margin-right:150px;
        min-width:380px;
        max-width:380px;
        color:white;
    }
    .card-title:hover{
        font-weight:bold;
    }
    </style>
        

    
{% endblock %}
