{% extends 'baseuser.html.twig' %}

{% block title %}Payment Success!
{% endblock %}

{% block body %}

	<div class="container-fluid pt-4 px-4">
		<div class="row g-4">

			<div class="col-12">
				<div class="bg-secondary rounded h-100 p-4">
					<h6 class="mb-4">Liste des Achats</h6>
					<table class="table table-dark">
						<thead>
							<tr>

								<th scope="col">Date</th>
								<th scope="col">Montant</th>
								<th scope="col">Produits</th>


							</tr>
						</thead>
						<tbody>
							{% for c in co %}
								<tr>

									<td>
										{{c.DateAchat| date('Y-m-d H:i')}}
									</td>
									<td>
										{{c.Montant}}
										DT
									</td>
									<td>
										{% for pid in c.produits %}
											{% set p = prp.find(pid) %}

											{% if p %}
												<li>{{ p.libelle }}</li>
											{% else %}
												<li>Product not found</li>
											{% endif %}
										{% endfor %}
									</td>


								</tr>
							{% endfor %}
						</tbody>
					</table>


				</div>
			</div>
		</div>
	</div>
	<script>
        {% if not app.user %}
            window.location.href = "{{ path('app_login') }}";
        {% endif %}
    </script>
{% endblock %}
