{% extends 'base.html.twig' %}

{% block title %}Afficher Produit
{% endblock %}


{% block body %}

	<div class="container-fluid pt-4 px-4">
		<div class="row g-4">

			<div class="col-12">
				<div class="bg-secondary rounded h-100 p-4">
					<h6 class="mb-4">Liste des Produits</h6>
						<table class="table table-dark">
							<thead>
								<tr>
									<th scope="col">Libelle</th>
									<th scope="col">Prix</th>
									<th scope="col">Description</th>
									<th scope="col">Likes</th>
									<th scope="col">Marque</th>
									<th scope="col">Categorie</th>
									<th scope="col">Action</th>

								</tr>
							</thead>
							<tbody>
								{% for p in produit %}
									<tr>
										<td>
											{{p.libelle}}
										</td>
										<td>
											{{p.prix}}
										</td>
										<td>
											{{p.description}}
										</td>
										<td>
											{{p.likes}}
										</td>
										<td>
											{{p.marque}}
										</td>
										<td>
											{{p.categorie.nom}}
										</td>
										<td>
											<div class="btn-group" role="group">
												<a type="button" class="btn btn-outline-primary" href="{{ path ('modifier_produit',{'id':p.id}) }}">Modifier</a>
												<a type="button" class="btn btn-outline-primary" href="{{ path ('supprimer_produit',{'id':p.id}) }}">Supprimer</a>
											</div>
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					
					<div class="btn-group" role="group">
						<a type="button" class="btn btn-outline-primary" href="{{ path ('add_produit') }}">Ajouter un produit</a>
						<a type="button" class="btn btn-outline-primary" href="{{ path ('afficher_categorie') }}">Voir la liste des cat√©gories</a>
					</div>
				</div>
			</div>
		</div>
	</div>
	<script>
        {% if not app.user %}
            window.location.href = "{{ path('app_login') }}";
        {% endif %}
		{% if app.user.idrole.role =="Joueur"  %}
            window.location.href = "{{ path('app_home') }}";
        {% endif %}
    </script>
	
{% endblock %}
