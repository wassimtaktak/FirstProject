{% extends 'baseuser.html.twig' %}

{% block title %}DÃ©tail du produit
{% endblock %}

{% block body %}

	<div class="anime__details__content">
		<div class="row">
			<div class="col-lg-3">
				<div class="anime__details__pic set-bg">
					<img src="{{ asset('img/' ~ produit.image) }}" alt="">
					<div class="comment">
						<i class="fa fa-comments"></i>
						11</div>
					<div class="view">
						<i class="fa fa-eye"></i>
						9141</div>
				</div>
			</div>
			<div class="col-lg-9">
				<div class="anime__details__text">
					<div class="anime__details__title">
						<h3>{{produit.libelle}}</h3>
						<span>{{produit.categorie.nom}}</span>
					</div>
					
					<p>{{produit.description}}</p>
					<div class="anime__details__widget">
						<div class="row">
							<div class="col-lg-6 col-md-6">
								<ul>
									<li>
										<span>Marque:</span>
										{{produit.marque}}</li>
									<li>
										<span>Prix:</span>
										{{produit.prix}}
										DT</li>
									
								</ul>
							</div>
							<div class="col-lg-6 col-md-6">
								<ul>
									
								</ul>
							</div>
						</div>
					</div>

					<div class="row">


						<div class="anime__details__btn">
							<a href="{{ path('add_to_card', {'id': produit.id}) }}" class="watch-btn">
								<span>Ajouter au panier</span>
								<i class="fa fa-angle-right"></i>
							</a>
						</div>
						<div class="col-lg-3 "></div>

						{% set qrContent = produit.marque ~ ".com" %}
						<img src="{{ qr_code_data_uri(qrContent) }}"/>

						{% for message in app.flashes('produit_card') %}
							<div class="alert alert-success">
								{{ message }}
							</div>
						{% endfor %}


					</div>
				</div>
			</div>
		</div>
	</div>

	<script>
        {% if not app.user %}
            window.location.href = "{{ path('app_login') }}";
        {% endif %}
    </script>

{% endblock %}
