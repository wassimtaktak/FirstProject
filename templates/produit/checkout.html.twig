{% extends 'baseuser.html.twig' %}

{% block title %}Afficher Produit
{% endblock %}


{% block body %}

	<div class="container-fluid pt-4 px-4">
		<div class="row g-4">

			<div class="col-12">
				<div class="bg-secondary rounded h-100 p-4" >
					<h6 class="mb-4">Panier</h6>
				</div>
			</div>
			<div class="col-12">

				<table class="table-responsive table bg-white">
					<tbody style="width:100%">
						<th>libelle</th>
						<th>image</th>
						<th>prix</th>
						<th>marque</th>
						{% set total = 0 %}
						{% for product in products %}
							<tr>
								<td>{{ product.libelle }}</td>
								<td><img src={{asset('img/' ~ product.image)}} alt="" width="200" height="200"/></td>

								<td>{{ product.prix}}</td>
								<td>{{ product.marque }}</td>
							</tr>
							{% set total = total+ product.prix %}
						{% endfor %}
					</tbody>

				</table>

			</div>
			<span><h4>    total ={{total}} DT</h4></span>

			<div class="anime__details__btn w-100  pl-2 text-right">
				<a href="" class="watch-btn">
					<span>Acheter</span>
				</a>
			</div>
		</div>
	</div>
{% endblock %}
