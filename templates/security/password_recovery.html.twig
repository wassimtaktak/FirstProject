{% extends 'baseuser.html.twig' %}

{% block title %}Password Recovery{% endblock %}

{% block body %}
<div class="container-fluid pt-4 px-4" style="margin-bottom: 120px;">
    <div class="row justify-content-center">
        <div class="col-sm-12 col-xl-8">
            <div class="rounded h-100 p-4" style="background: #262626;text-align: center;">
            <h4>Password Recovery</h4>
                <br>
                <br>
                <form method="post">
                    <div class="form-group">
                        <label for="username"style="Color : white">Username:</label>
                        <input type="text" id="username" name="username" class="form-control" required>
                    </div>
                    <br>
                    <br>
                    <div class="form-group">
                        <label style="color: white">Choose OTP Delivery Method:</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="otp_delivery_method" id="otp_delivery_email" value="email" checked>
                            <label class="form-check-label"style="color: white" for="otp_delivery_email">Email</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="otp_delivery_method" id="otp_delivery_phone" value="phone">
                            <label class="form-check-label" style="color: white"for="otp_delivery_phone">SMS</label>
                        </div>
                    </div>
                    <br>
                    <div  style="display: flex;margin-left : 250px">
                    
                    <button type="submit" class="btn btn-outline-light m-2">Submit</button>
                    <a href="{{ path('app_login') }}" class="btn btn-outline-light m-2">Back</a>
                    </div>
                </form>
                
            </div>
        </div>
    </div>
</div> 
<br>


{% endblock %}
