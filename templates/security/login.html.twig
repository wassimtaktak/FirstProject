{% extends 'baseuser.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <div class="text-center col-12 mt-4">
    <h3>Login</h3>
    <div>
    <label for="inputUsername">Username</label>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control,input__item" autocomplete="username" required autofocus>
    </div>
    <div>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control,input__item" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    </div>
    <button class="primary-btn" type="submit">
        Sign in
    </button>
    <br>
    <a href="{{path('app_register')}}"class="text">don't have an account yet?Register now</a>
    </div>
</form>
{% endblock %}
