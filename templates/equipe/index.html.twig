{% extends 'baseuser.html.twig' %}

{% block title %}Equipe index{% endblock %}

{% block body %}
   <!-- Breadcrumb Begin -->
    <div class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__links">
                        <a href="./index.html"><i class="fa fa-home"></i> Home</a>
                        <a href="./categories.html">Tournois</a>
                        <span>Participants</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->
    <section class="product-page spad"> 
                          <div class="col-lg-12">
                            <div class="product__page__content">
                              <div class="product__page__title">
                                  <div class="row">
                                      <div class="col-lg-8 col-md-8 col-sm-6">
                                          <div class="section-title">
                                              <h4>Les Participants</h4>
                                          </div>
                                      </div>
                                      <div class="col-lg-4 col-md-4 col-sm-6">
                                          <div class="product__page__filter">
                                              <a class="btn btn-outline-primary m-2" href="{{ path('app_afficher_equipe', {'id': 59 ,'idtournoi': idtournoi}) }}">mon équipe</a>
                                          </div>
                                      </div>
                                  </div>
                              </div>
                              <div class="row">
                              {% for equipe in equipes %}
                                <div class="col-lg-4 col-md-6 col-sm-6">
                                    <div class="product__item">
                                        {% if equipe.imageequipe %}
                                            <div class="product__item__pic set-bg" data-setbg="{{ asset('uploads/images/' ~ equipe.imageequipe) }}"></div>
                                        {% else %}
                                            <div class="product__item__pic set-bg" data-setbg="{{asset("img/equipe.png")}}"></div>
                                        {% endif %}
                                        <div class="product__item__text">
                                            <h5><a href="#">{{ equipe.nom }}</a></h5>
                                        </div>
                                    </div>
                                </div>
                              {% endfor %}
                              </div>
                            </div>
                          </div>
    </section>
                

    
   


    {% if not equipesComplet %}
    <a href="{{ path('app_equipe_new', {'id': idtournoi}) }}">Créer votre équipe</a>
    {% endif %}
{% endblock %}
