{% extends 'baseuser.html.twig' %}

{% block title %}Classement{% endblock %}

{% block body %}
   <!-- Breadcrumb Begin -->
    <div class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__links">
                        <a href="#"><i class="fa fa-home"></i> Home</a>
                        <a href="#">Tournois</a>
                        <a href="{{ path('app_equipe_show', {'id': idtournoi}) }}" >Participants</a>
                        <span>Classement</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->
    <section class="product-page spad"> 
                          <div class="col-lg-12">
                            <div class="product__page__content">
                              <div class="product__page__title">
                                  <div class="row">
                                      <div class="col-lg-8 col-md-8 col-sm-6">
                                          <div class="section-title">
                                              <h4>Classement</h4>
                                          </div>
                                      </div>
                                  </div>
                              </div>
                              <div class="row">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Equipe</th>
                                                <th>Points</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        {% for equipe in equipes %}
                                            <tr>
                                                <td>{{ equipe.nom }}</td>
                                                <td>{{ equipe.Points }}</td>
                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="6">Aucune equipe pour ce tournoi</td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                              </div>
                            </div>
                          </div>
    </section>
{% endblock %}
