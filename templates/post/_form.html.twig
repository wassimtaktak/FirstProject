<head>
    <script src="https://cdn.tiny.cloud/1/4o9f4fijrr3q5qzvhkynquagslplrxm6c8edrjw8w959w9ou/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: '#mytextarea',
            skin: 'oxide-dark',
            content_css: 'dark',
            content_style: 'body { color: white; }',
            setup: function(editor) {
                editor.on('init', function() {
                    editor.execCommand('ForeColor', false, '#ffffff'); // Set initial text color to white
                });
            }
        });
    </script>
</head>
<body>
    <form method="post">
        <textarea id="mytextarea" name="post_content">{{ post.message }}</textarea>
        
        <button type="submit">Poster</button>
    </form>
</body>
