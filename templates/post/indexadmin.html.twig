{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}
{% block active5 %}class="active"{% endblock %}
{% block body %}
    <h2>{{forum.sujet}}</h2>
    <a class="btn btn-lg btn-primary m-2" href="{{ path('app_forumadmin_statistics',{'id': forum.id}) }}">Voir Statistiques</a>
    
    


                
            <div class="cards-container">
                {% for post in posts %}
                <div class="card">
                    <div class="card-body" >
                        <div style="display:flex;flex-direction:column;">
                        <div style="display:flex;flex-direction:row;">
                        <img src="{{asset('img/profil.png')}}" style="height:25px;width:25px;margin-right:10px;"/>
                        <p class="card-title">{{post.idUser.username}}</p>
                        </div>
                        <p class="card-title" >{{ post.message|raw }}</p>
                        </div>
                        <div style="display:flex;flex-direction:column;">
                        <!--<a href="{{ path('app_post_show', {'id': post.id}) }}">show</a>-->
                        <a href="{{ path('app_postadmin_edit', {'id': post.id}) }}"><img style="margin:10px;width:20px;height:20px;" src="{{ asset('/img/editer.png') }}"/></a>
                        <!--<a href="#">like</a>-->
                        {{ include('post/_delete_form.html.twig') }}
                        <!--<p class="card-text">{{ post.nblike }}</p>-->
                        </div>
                        
                    </div>
                </div>
                    
                
            
        {% else %}
