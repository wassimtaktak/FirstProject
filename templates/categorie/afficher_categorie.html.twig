{% extends 'base.html.twig' %}

{% block title %}Hello ProduitController!
{% endblock %}


{% block body %}

	<div class="container-fluid pt-4 px-4">
		<div class="row g-4">
			<center>
				<div class="col-6">
					<div class="bg-secondary rounded h-100 p-4">
						<h6 class="mb-4">Liste des categories</h6>

						<table class="table table-dark">
							<thead>
								<tr>
									<th scope="col">Nom</th>
									<th scope="col">Action</th>

								</tr>
							</thead>
							<tbody>
								{% for c in categorie %}
									<tr>
										<td>
											{{c.nom}}
										</td>

										<td>
											<div class="btn-group" role="group">
												<a type="button" class="btn btn-outline-primary" href="{{ path ('modifier_categorie',{'id':c.id}) }}">Modifier</a>
												<a type="button" class="btn btn-outline-primary" href="{{ path ('supprimer_categorie',{'id':c.id}) }}">Supprimer</a>
											</div>
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
						<div class="btn-group" role="group">
							<a type="button" class="btn btn-outline-primary" href="{{ path ('add_categorie') }}">Ajouter une cat√©gorie</a>
							<a type="button" class="btn btn-outline-primary" href="{{ path ('afficher_produit') }}">Voir liste produit</a>
						</div>
					</div>
				</div>
			</center>
		</div>
	</div>
{% endblock %}
